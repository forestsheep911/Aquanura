# ===========================================
# Kintone Plugin Deploy Tools - Environment Configuration
# Copy this file to .env and fill in your actual values
# ===========================================

# === Basic Settings ===
NODE_ENV=development
# DEV_MODE: instant (immediate rebuild) / lazy (lazy compilation) / true|false (legacy compatibility)
DEV_MODE=instant
# Lazy compilation quiet window (only effective when DEV_MODE=lazy, supports formats like 45s/2m/1h)
DEV_LAZY_WINDOW=10s
VITE_LOG_LEVEL=info
VITE_HOST=127.0.0.1
VITE_PORT=3000

# === HTTPS & Hot Reload Configuration ===
# Add additional domains for HTTPS certificate (comma-separated)
# Default includes: localhost, 127.0.0.1, ::1
# Use cases:
#   - Access via custom domain (e.g., dev.local)
#   - Access from other devices on LAN (e.g., 192.168.1.100)
# Example: DEV_HTTPS_DOMAINS=dev.local,192.168.1.100
DEV_HTTPS_DOMAINS=

# Whether to automatically upload proxy plugin to Kintone when dev server starts
# true (default): Fully automated, auto-upload on each start (recommended for daily development)
# false: Requires manual upload once, then hot reload takes effect
# Note: Requires Kintone credentials configured below
DEV_UPLOAD=true

# === Logging Settings ===
# Enable local JSONL logging to log/dev.log
DEV_LOCAL_LOG_ENABLED=true
# Optional: Custom log directory (default: log)
# DEV_LOG_DIR=log
# Set to true when you don't need terminal prompts
# QUIET=false

# === Plugin Path Configuration ===
PLUGIN_ROOT=./plugin
# Override auto-upload or build output plugin package path with these variables
# PLUGIN_FILE_PATH=./plugin/dist/plugin-dev.zip
# PLUGIN_ZIP=./plugin/dist/plugin.zip

# === Manifest Validation ===
# strict (default): block on errors
# warn: print errors but continue
# off: skip validation entirely (not recommended)
MANIFEST_VALIDATE=strict

# === Kintone Development Environment ===
KINTONE_DEV_BASE_URL=https://your-dev-domain.cybozu.com/
KINTONE_DEV_USERNAME=your-dev-username
KINTONE_DEV_PASSWORD=your-dev-password

# === Kintone Production Environment ===
KINTONE_PROD_BASE_URL=https://your-prod-domain.cybozu.com/
KINTONE_PROD_USERNAME=your-prod-username
KINTONE_PROD_PASSWORD=your-prod-password
